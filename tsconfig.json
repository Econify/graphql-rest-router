{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "build/src",
    "rootDir": "src/",
    "moduleResolution": "node",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "build/src/",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es7",
      "es2017.object",
      "esnext",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.graphql",
    "package.json"
  ],
  "exclude": [
    "node_modules/**",
    "example-consuming-client",
    "test",
    "build"
  ]
}
